<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword">

    <TextView
        android:id="@+id/txtResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:fontFamily="@font/opensans_extrabold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/txtInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResetPassword"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="22dp"
        android:fontFamily="@font/opensans_bold"
        android:text="Enter the email associated with your account and we will send an email with instructions to reset your password"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtInstructions"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/opensans_bold"
        android:text="Email address"
        android:textColor="#757575"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etEnterEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmailAddress"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="#f4511e"
        android:fontFamily="@font/opensans_bold"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btnSendInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEnterEmail"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="22dp"
        android:backgroundTint="#ffd600"
        android:fontFamily="@font/robotomono_bold"
        android:padding="8dp"
        android:text="Send Instructions"
        android:textColor="#000000"
        android:textSize="18sp" />











</RelativeLayout>